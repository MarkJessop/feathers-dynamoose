{
  "name": "feathers-dynamoose",
  "description": "Feathers service with AWS DynamoDb via dynamoose",
  "version": "0.0.1",
  "homepage": "https://github.com/afifsohaili/feathers-dynamoose",
  "main": "build/main.js",
  "keywords": [
    "feathers",
    "feathers-plugin"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/afifsohaili/feathers-dynamoose.git"
  },
  "author": {
    "name": "Afif Sohaili",
    "email": "afifnajib@gmail.com",
    "url": "https://afifsohaili.github.io"
  },
  "contributors": [],
  "bugs": {
    "url": "https://github.com/afifsohaili/feathers-dynamoose/issues"
  },
  "engines": {
    "node": ">= 6.0.0"
  },
  "scripts": {
    "publish": "git push origin --tags && npm run build && git push origin",
    "release:pre": "npm version prerelease && npm publish --tag pre",
    "release:patch": "npm version patch && npm publish",
    "release:minor": "npm version minor && npm publish",
    "release:major": "npm version major && npm publish",
    "lint": "xo",
    "dev": "backpack",
    "build": "backpack build",
    "test": "jest && codecov"
  },
  "directories": {
    "src": "src"
  },
  "dependencies": {
    "dynamoose": "^1.3.0",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.6.0",
    "backpack-core": "^0.8.3",
    "chance": "^1.0.18",
    "codecov": "^3.1.0",
    "dynamodb-local": "0.0.24",
    "jest": "^23.6.0",
    "jest-cli": "^23.6.0",
    "xo": "^0.23.0"
  },
  "xo": {
    "space": true
  },
  "jest": {
    "collectCoverage": true,
    "coverageDirectory": "./coverage/",
    "globalSetup": "<rootDir>/tests/setup-dynamodb.js",
    "globalTeardown": "<rootDir>/tests/teardown-dynamodb.js",
    "globals": {
      "__DEV__": true
    },
    "setupFiles": [
      "<rootDir>/tests/set-dynamodb-config.js"
    ],
    "testEnvironment": "node",
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
    ]
  }
}
